<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-8">
      <div class="row mb-4 ">
        <div class="col d-flex justify-content-between">
          <div>
            <h5>ゲーム一覧</h5>
          </div>
          <div>
            <%= link_to new_admin_game_path do %>
              <i class="fas fa-plus-circle fa-2x"></i>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row">
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>ゲームID</th>
                <th>ゲーム名</th>
                <th>発売日</th>
                <!--<th>ジャンル</th>-->
                <!--<th>ステータス</th>-->
              </tr>
            </thead>

            <tbody>
              <% @games.each do |game| %>
                <tr>
                  <th><%= game.id %></th>
                  <th><%= link_to game.title, admin_game_path(game) %></th>
                  <th><%= game.sales_date %></th>
                  <!--<th></th>-->
                  <!--<th></th>-->
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @games %>
      </div>
    </div>
  </div>
</div>
