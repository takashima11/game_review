<div class="container">
  <h1>ゲーム新規登録</h1>
  <div class="row">

  </div>

  <div class="row">
    <div class="col d-flex justify-content-center">
      <%= form_with model: @game, url: admin_games_path do |f| %>
        <div class="row">
          <div class="col-4">
            <p>ゲーム画像</p>
          </div>
          <div class="col-8">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p>ゲーム名</p>
          </div>
          <div class="col-8">
            <%= f.text_field :name %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p>ゲーム説明</p>
          </div>
          <div class="col-8">
            <%= f.text_area :introduction %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <p>発売日</p>
          </div>
          <div class="col-8">
            <%= f.text_field :release_date %>
          </div>
        </div>
        <div class="row">
          <div class="col-4">
            <!--<p>販売ステータス</p>-->
          </div>
        </div>

        <div class="row d-flex justify-content-center mt-5">
          <%= f.submit '新規登録', class: "btn btn-success pl-4 pr-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>



