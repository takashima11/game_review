<div style="height: 400px;">
  <div class="container">
    <div class="row mb-3">
      <span>　　　　　　　　　　　　　　　　　　　　</span><h4>ログイン</h4>
    </div>

    <div class="row d-flex align-items-center justify-content-center">
      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="field pb-3">
          <%= f.label :email, class: "pr-5" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field pb-3">
          <%= f.label :password, class: "pr-3" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <!--<%# if devise_mapping.rememberable? %>-->
        <!--  <div class="field">-->
        <!--    <%#= f.check_box :remember_me %>-->
        <!--    <%#= f.label :remember_me %>-->
        <!--  </div>-->
        <!--<%# end %>-->

        <div class="actions pt-3 d-flex justify-content-center">
          <div>
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

      <%#= render "public/shared/links" %>
  </div>
</div>