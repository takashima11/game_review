<div class="container">
  <div class="row mb-4">
    <span>　　　　　　　</span><h5>新規会員登録</h5>
  </div>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row mb-4">
    <div class="col-3">
      <p><%= f.label "名前" %></p>
      <p><%= f.label "フリガナ" %></p>
      <p><%= f.label "メールアドレス" %></p>
      <p><%#= f.label :email %></p>
      <p><%= f.label "ニックネーム" %></p>
      <p><%= f.label "生年月日" %></p>
      <p><%= f.label "性別" %></p>
      <p><%#= f.label :password %></p>
      <p><%= f.label "パスワード(6文字以上)" %></p>
      <p><%#= f.label :password_confirmation %></p>
      <p><%= f.label "パスワード(確認用)" %></p>
    </div>

    <div class="col-0.5 text-right">
      <p><%= f.label "(姓)" %></p>
      <p><%= f.label "(セイ)" %></p>
    </div>

    <div class="col-2">
      <p><%= f.text_field :last_name %></p>
      <p><%= f.text_field :last_name_kana %></p>
      <p><%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
      <p><%= f.text_field :nickname %></p>
      <p><%= f.date_select :birthday, {start_year: 1920, end_year: 2023,
          include_blank: true, use_two_digit_numbers: true},
          {class: "input-tab birthday-select"}%></p>
      <p><div class="form-group">
          <%= f.label :sex, '性別' %>
          <%= f.select :sex, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
        </div></p>
      <!--<%# if @minimum_password_length %>-->
      <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
      <!--<%# end %><br />-->
      <p><%= f.password_field :password, autocomplete: "new-password" %></p>
      <p><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>

    <div class="col-1 text-right">
      <p><%= f.label "(名)" %></p>
      <p><%= f.label "(メイ)" %></p>
    </div>

    <div class="col-3">
      <p><%= f.text_field :first_name %></p>
      <p><%= f.text_field :first_name_kana %></p>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>

</div>
