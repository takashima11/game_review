  <!--  <div class="col-md-3 position-static">-->

  <!--  </div>-->
  <!--</div>-->

  <script>
  var elem = document.getElementById('post_raty');
  var opt = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: "post[star]"
    };
    raty(elem,opt);
  </script>
</div>